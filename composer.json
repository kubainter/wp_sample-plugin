{
  "name": "jakubg/graduates",
  "description": "Graduates plugin for WordPress",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors" : [
    {
      "name" : "Jakub Grzesiak",
      "email" : "jakub.grzesiak@jg-webtech.pl",
      "role" : "PHP Developer"
    }
  ],
  "require": {
    "php": ">=8.1",
    "composer/installers": "^1.0 || ^2.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "Graduates\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "composer dump-autoload -o",
      "@copy-translations"
    ],
    "post-update-cmd": [
      "composer dump-autoload -o",
      "@copy-translations"
    ],
    "copy-translations": [
      "php bin/copy-translations.php"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}